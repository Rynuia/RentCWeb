@model IEnumerable<RentCWeb.Models.ReservationViewModel>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Index</h2>


<div class="container" style="width:60%;margin-top:2%">
    @if (Model != null)
    {
        <table class="table table-striped">

            <tr>
                <th>Car ID</th>
                <th>Customer ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Location</th>
                <th>Plate</th>
            </tr>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CarID</td>
                    <td>@item.CostumerID</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Location</td>
                    <td>@item.Plate</td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>